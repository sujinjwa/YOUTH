extends ../base.pug

block content
  main#login 
    .wrapper
      if popup 
        p#popup #{popup}
      .login__box 
        h1 로그인

        //- .social-login__box
        //-   h5 다른 서비스로 로그인
        //-   .social-login__btns 
        //-     a(href="/login/kakao/start")
        //-       i.fa-solid.fa-comment
        //-     a(href="/login/naver/start")
        //-       img(src="/uploads/naver_icon.png", alt="")
        //- .border
        //-   hr
        //-   p 또는
        //-   hr

        form(method="POST")
          label#email(for="email") 이메일
          input.input__email#email(
            type="email",
            required,
            name="email",
            placeholder="이메일"
          )
          label#pw(for="pw") 비밀번호
          input.input__pw#pw(
            type="password",
            required,
            name="password",
            placeholder="비밀번호"
          )
          if errorMessage
            p#error * #{ errorMessage }
          input.login__btn(type="submit", value="로그인")

      .find__box 
        a(href="/login/findID") 아이디 찾기
        p ㅣ
        a(href="/login/findPW") 비밀번호 찾기

      .border
        hr

      .join__btn 
        a(href="/join") 회원가입
